write("Quadratic helper: x^2 - 3x - 10 = 0");
coeffA = 1;
coeffB = -3;
coeffC = -10;
discriminant = (coeffB * coeffB) - (4 * coeffA * coeffC);
write("Discriminant = ", discriminant);

approx = discriminant / 2;
iterations = 0;
while (iterations < 6) {
    approx = 0.5 * (approx + (discriminant / approx));
    iterations = iterations + 1;
}

rootPositive = (-coeffB + approx) / (2 * coeffA);
rootNegative = (-coeffB - approx) / (2 * coeffA);
write("Roots: ", rootPositive, " and ", rootNegative);
